ientation="horizontal">            <ImageView                android:layout_width="10dp"                android:layout_height="60dp"                android:background="#ef3e65" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="10dp"                android:orientation="vertical"                android:paddingTop="10dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:text="Bank"                    android:textColor="#262626"                    android:textFontWeight="bold"/>                <TextView                    android:id="@+id/bank"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_gravity="bottom"                    android:textFontWeight="bold"                    tools:text="Master Card"/>            </LinearLayout>        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginLeft="20dp"            android:layout_marginTop="20dp"            android:layout_marginRight="20dp"            android:orientation="horizontal">            <ImageView                android:layout_width="10dp"                android:layout_height="60dp"                android:background="#f4a849" />            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:layout_marginLeft="10dp"                android:orientation="vertical"                android:paddingTop="10dp">                <TextView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"      