<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffaa35"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <EditText
        android:id="@+id/card_number_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/et_style"
        android:drawableStart="@drawable/credit_card"
        android:drawableLeft="@drawable/credit_card"
        android:drawablePadding="10dp"
        android:paddingVertical="5dp"
        android:hint="Enter Credit card No"
        tools:targetApi="o" />

    <Button
        android:id="@+id/scan_card_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:paddingVertical="6dp"
        android:paddingLeft="6dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/et_style"
        android:drawableStart="@drawable/ic_barcode"
        android:drawableLeft="@drawable/ic_barcode"
        android:text="Scan Card With Ocr"
        tools:targetApi="o" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/proceed_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="35dp"
            android:background="@drawable/et_style"
            android:drawablePadding="5dp"
            android:paddingVertical="20dp"
            android:text="Proceed To View Card Info"
            tools:targetApi="o" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="40dp"
        android:text="View Card Details"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="bold"
        android:textSize="24sp"
        tools:targetApi="p" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="40dp"
        android:text="Please enter your card number or Scan your credit card with OCR to get card number and click proceed to view card details"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textFontWeight="bold"
        android:textSize="14sp"
        tools:targetApi="p" />

</LinearLayout>